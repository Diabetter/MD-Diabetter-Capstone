<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardElevation="0dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:outlineSpotShadowColor="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_today_menu1"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:src="@drawable/foodpicts_517"
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        android:scaleType="centerCrop"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        card_view:layout_constraintTop_toBottomOf="@id/iv_today_menu1"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        android:backgroundTint="@color/primary_100">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gado-Gado"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textSize="@dimen/body_5"
                            android:textColor="@color/secondary_900"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@id/menu1"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:paddingBottom="12dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:outlineSpotShadowColor="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_today_menu2"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:src="@drawable/foodpicts_517"
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        android:scaleType="centerCrop"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        card_view:layout_constraintTop_toBottomOf="@id/iv_today_menu2"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        android:backgroundTint="@color/primary_100">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:text="Gado-Gado"
                            android:textColor="@color/secondary_900"
                            android:textSize="@dimen/body_5" />
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/menu1"
            android:layout_marginStart="32dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:outlineSpotShadowColor="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_today_menu3"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:src="@drawable/foodpicts_517"
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        android:scaleType="centerCrop"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        card_view:layout_constraintTop_toBottomOf="@id/iv_today_menu3"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        android:backgroundTint="@color/primary_100">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gado-Gado"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textSize="@dimen/body_5"
                            android:textColor="@color/secondary_900"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/menu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@id/menu3"
            card_view:layout_constraintStart_toEndOf="@id/menu2"
            android:layout_marginTop="16dp"
            android:paddingBottom="12dp"
            android:layout_marginStart="32dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:outlineSpotShadowColor="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_today_menu4"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:src="@drawable/foodpicts_517"
                        card_view:layout_constraintTop_toTopOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        android:scaleType="centerCrop"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        card_view:layout_constraintTop_toBottomOf="@id/iv_today_menu4"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        android:backgroundTint="@color/primary_100">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gado-Gado"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:textSize="@dimen/body_5"
                            android:textColor="@color/secondary_900"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>