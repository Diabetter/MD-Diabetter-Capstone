<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.personalization.ui.GenderPersonalizationFragment">

    <TextView
        android:id="@+id/tv_choose_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_gender"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gender_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_choose_gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:paddingBottom="120dp">
        <RadioButton
            android:id="@+id/iv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/man"
            android:width="130dp"
            android:button="@android:color/transparent"
            />
        <RadioButton
            android:id="@+id/iv_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/woman"
            android:width="130dp"
            android:button="@android:color/transparent"
             />
        <TextView
            android:id="@+id/tv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_man"
            app:layout_constraintStart_toStartOf="@id/iv_man"
            app:layout_constraintEnd_toEndOf="@id/iv_man"
            android:layout_marginTop="2dp"
            android:text="@string/man"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_woman"
            app:layout_constraintStart_toStartOf="@id/iv_woman"
            app:layout_constraintEnd_toEndOf="@id/iv_woman"
            android:layout_marginTop="2dp"
            android:text="@string/woman"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="12sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>