<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.personalization.ui.body.BodyPersonalizationFragment">

    <TextView
        android:id="@+id/tv_body_personalization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_body_personalization"
        android:layout_marginTop="36dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        app:layout_constraintTop_toBottomOf="@id/tv_body_personalization"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="14sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_edit_text_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_age"
        app:hintEnabled="false"
        app:boxBackgroundColor="@color/white"
       >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            tools:ignore="SpeakableTextPresentCheck"
            android:background="@drawable/round_corner_toggle"
            android:textColor="@android:color/black"
            android:textColorHighlight="@color/primary_300"
            android:textCursorDrawable="@null"
            android:textSelectHandle="@color/primary_300"
            android:textSelectHandleLeft="@color/primary_300"
            android:textSelectHandleRight="@color/primary_300"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weight"
        app:layout_constraintTop_toBottomOf="@id/email_edit_text_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="14sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/weight_edit_text_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_weight"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_weight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="number"
            tools:ignore="SpeakableTextPresentCheck"
            android:background="@drawable/round_corner_toggle"
            android:textColor="@android:color/black"
            android:textColorHighlight="@color/primary_300"
            android:textCursorDrawable="@null"
            android:textSelectHandle="@color/primary_300"
            android:textSelectHandleLeft="@color/primary_300"
            android:textSelectHandleRight="@color/primary_300"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/height"
        app:layout_constraintTop_toBottomOf="@id/weight_edit_text_layout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:textSize="14sp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/height_edit_text_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_height"
        android:paddingBottom="48dp"
        app:hintEnabled="false"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_corner_toggle"
            android:inputType="number"
            tools:ignore="SpeakableTextPresentCheck"
            android:textColor="@android:color/black"
            android:textColorHighlight="@color/primary_300"
            android:textCursorDrawable="@null"
            android:textSelectHandle="@color/primary_300"
            android:textSelectHandleLeft="@color/primary_300"
            android:textSelectHandleRight="@color/primary_300"/>
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>