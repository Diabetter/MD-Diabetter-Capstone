<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_500"
    tools:context=".view.main.ui.profile.ProfileFragment">

    <ImageView
        android:id="@+id/bg_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/big_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/avatar_layout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="31dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:cardCornerRadius="48dp">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/background_light"
            android:src="@drawable/default_profile"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/main_profile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/avatar_layout"
        app:layout_constraintTop_toTopOf="@id/avatar_layout"
        app:layout_constraintBottom_toBottomOf="@id/avatar_layout"
        android:orientation="vertical"
        android:layout_marginStart="16dp">
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="@string/home_username"
            android:fontFamily="@font/poppins_semi_bold"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/body_2" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="Male"
                android:fontFamily="@font/poppins"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/body_2" />
            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text=", 55"
                android:fontFamily="@font/poppins"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/body_2" />
            <TextView
                android:id="@+id/years_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@string/years_old"
                android:fontFamily="@font/poppins"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/body_2"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-30dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/avatar_layout">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:scrollbars="none">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/profile_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Profile"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_age_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/profile_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/age"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/secondary_700"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/tv_age_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_age_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/age"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/tv_weight_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_age_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/weight"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/secondary_700"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/tv_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_weight_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/weight"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/tv_height_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_weight"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/height"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/secondary_700"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/tv_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_height_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/height"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/tv_daily_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_height"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/daily_activity"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/secondary_700"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/tv_daily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_daily_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/daily_activity"
                    android:fontFamily="@font/poppins"
                    android:textSize="12sp"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/menu_history_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_see_history"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/body_4"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_daily"/>

                <TextView
                    android:id="@+id/see_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_more"
                    android:fontFamily="@font/poppins"
                    android:includeFontPadding="false"
                    android:textColor="@color/secondary_700"
                    android:textSize="@dimen/body_5"
                    android:layout_marginTop="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_daily"/>

                <include
                    android:id="@+id/menu_history"
                    layout="@layout/history_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/menu_history_title"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="-3dp"
                    android:layout_marginEnd="-3dp"/>

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:padding="12dp"
                    android:text="@string/edit_profile"
                    android:textColor="@color/primary_600"
                    android:textSize="@dimen/body_5"
                    app:layout_constraintTop_toBottomOf="@id/menu_history"
                    android:layout_marginBottom="8dp"
                    app:strokeColor="@color/primary_300"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:strokeWidth="3dp" />

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="@color/error_500"
                    android:fontFamily="@font/poppins_bold"
                    android:padding="10dp"
                    android:text="@string/logout"
                    android:textColor="@color/white"
                    android:textSize="@dimen/body_3"
                    app:layout_constraintTop_toBottomOf="@id/btn_edit" />
                <TextView
                    android:id="@+id/diabetter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/btn_logout"
                    android:text="@string/diabetter"
                    android:fontFamily="@font/poppins_bold"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="@dimen/body_5"/>

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/diabetter"
                    android:text="V 1.0.0"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:textSize="@dimen/body_6"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>