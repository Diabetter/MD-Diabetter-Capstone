<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/ivWelcome"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/guideline"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/circle_layout"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/ivWelcome2"
            motion:layout_constraintStart_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/guideline" />
        <Constraint
            android:id="@+id/circle_left_active"
            motion:layout_constraintStart_toEndOf="@id/guideline_left"
            motion:layout_constraintEnd_toStartOf="@id/circle_mid_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:alpha="1"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/circle_left_inactive"
            motion:layout_constraintStart_toEndOf="@id/guideline_left"
            motion:layout_constraintEnd_toStartOf="@id/circle_mid_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:layout_marginTop="16dp"
            android:alpha="0"/>
        <Constraint
            android:id="@+id/circle_mid_active"
            motion:layout_constraintEnd_toStartOf="@id/circle_right_inactive"
            motion:layout_constraintStart_toEndOf="@id/circle_left_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/circle_mid_inactive"
            motion:layout_constraintEnd_toStartOf="@id/circle_right_inactive"
            motion:layout_constraintStart_toEndOf="@id/circle_left_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/circle_right_inactive"
            motion:layout_constraintEnd_toStartOf="@id/guideline_right"
            motion:layout_constraintStart_toEndOf="@id/circle_mid_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:layout_marginTop="16dp" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/welcome2" >
        <Constraint
            android:id="@+id/ivWelcome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/guideline"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent" />
        <Constraint
            android:id="@+id/ivWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/guideline"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/circle_layout"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" />
        <Constraint
            android:id="@+id/circle_left_active"
            motion:layout_constraintStart_toEndOf="@id/guideline_left"
            motion:layout_constraintEnd_toStartOf="@id/circle_mid_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:alpha="0"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/circle_left_inactive"
            motion:layout_constraintStart_toEndOf="@id/guideline_left"
            motion:layout_constraintEnd_toStartOf="@id/circle_mid_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:layout_marginTop="16dp"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/circle_mid_active"
            motion:layout_constraintEnd_toStartOf="@id/circle_right_inactive"
            motion:layout_constraintStart_toEndOf="@id/circle_left_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/circle_mid_inactive"
            motion:layout_constraintEnd_toStartOf="@id/circle_right_inactive"
            motion:layout_constraintStart_toEndOf="@id/circle_left_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:layout_marginTop="16dp" />
        <Constraint
            android:id="@+id/circle_right_inactive"
            motion:layout_constraintEnd_toStartOf="@id/guideline_right"
            motion:layout_constraintStart_toEndOf="@id/circle_mid_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/tv_welcome"
            android:layout_marginTop="16dp" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/welcome2">
        <OnSwipe motion:dragDirection="dragLeft" />
    </Transition>
</MotionScene>